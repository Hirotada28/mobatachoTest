<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="mobatako.EndCrewingConfirmDialog"
    NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="endCrewingDialogDescription" Text="乗務終了理由を選択して下さい" FontSize="20" Margin="30,80,30,5" />
            <Button x:Name="endCrewingDialogLeavingButton" Text="帰庫" Clicked="EndCrewingDialogButton" TextColor="White" FontSize="20" Background="#3399ff" Margin="30,100,30,5" />
            <Button x:Name="endCrewingDialogLodgingButton" Text="宿泊" Clicked="EndCrewingDialogButton" TextColor="White" FontSize="20" Background="#3399ff" Margin="30,5,30,5"/>
            <Button x:Name="endCrewingDialogCancelButton" Text="キャンセル" Clicked="EndCrewingDialogCancelButton" TextColor="#3399ff" FontSize="20" Background="white" BorderColor="#3399ff" BorderWidth="1" Margin="30,100,30,5"/>
            <Label Text="[0304]" VerticalOptions="FillAndExpand" HorizontalTextAlignment="End" VerticalTextAlignment="End" Margin="0, 0, 20, 20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

