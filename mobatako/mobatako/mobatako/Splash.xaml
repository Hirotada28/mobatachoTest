<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="mobatako.Splash"
    NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="logo_xhdpi.png" WidthRequest="200" HeightRequest="80"/>
            <ActivityIndicator IsRunning="True" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="80" HeightRequest="80" Margin="5,100,5,5" Color="Blue"/>
            <Label Text="起動しています" FontSize="30" HorizontalOptions="Center" Margin="5,100,5,5"/>
            <Label x:Name="version" VerticalTextAlignment="End" HorizontalTextAlignment="Center"/>
            <Label Text="[0000]" VerticalOptions="FillAndExpand" HorizontalTextAlignment="End" VerticalTextAlignment="End" Margin="0, 0, 20, 20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

