<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="mobatako.StartCrewingConfirmActivity"
    NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="choosedVehcle" Text="[choosedVehicle]" FontSize="30" HorizontalOptions="Center" Margin="10,80,10,10"/>
            <Label Text="で乗務を開始しますか？" FontSize="25" HorizontalOptions="Center"  Margin="10,10,10,80"/>
            <Button Text="乗務開始する" Clicked="StartCrewingButton" TextColor="White" FontSize="20" Background="#3399ff" Margin="30,5,30,5"/>
            <Button Text="キャンセル" Clicked="StartCrewingCancelButton" TextColor="White" FontSize="20" Background="#3399ff" Margin="30,5,30,5"/>
            <Label Text="[0104]" VerticalOptions="FillAndExpand" HorizontalTextAlignment="End" VerticalTextAlignment="End" Margin="0, 0, 20, 20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

